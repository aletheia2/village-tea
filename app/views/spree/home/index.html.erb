<% content_for :home_header do %>
  <header id="header" data-hook>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <figure id="logo" class="logo" data-hook>
            <%= logo %>
          </figure>
        </div>
      </div>
    </div>
  </header>
  <div class="nav-bar-container">
    <div class="container">
      <div class="row">
        <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
      </div>
    </div>
  </div>
  <div class="title-section">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="title-panel">
            <div class="header-title"><%= Spree.t('header.title') %></div>
            <div class="header-text"><%= Spree.t('header.text') %></div>
            <%= link_to Spree.t('header.link_shop_now'), products_path, class: "btn btn-success header-button link-shop-now" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="image-panel">
            <%= image_tag("spree/frontend/spree_header_bottle.png", class: "header-image") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="home-content">
  <div class="home-upper">
    <div class="container">
      <div class="row upper-row">
        <div class="col-md-4">
          <div class="home-upper-polygon">
            <%= image_tag("spree/frontend/home_upper_polygon.png", class: "home-upper-image") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="home-title"><%= Spree.t('home_upper.upper_title') %></div>
          <div class="home-text"><%= Spree.t('home_upper.upper_text') %></div>
        </div>
      </div>
      <div class="row lower-row">
        <div class="col-md-4 col-md-offset-4">
          <div class="home-title"><%= Spree.t('home_upper.lower_title') %></div>
          <div class="home-text"><%= Spree.t('home_upper.lower_text') %></div>
        </div>
        <div class="col-md-4">
          <div class="home-upper-polygon">
            <%= image_tag("spree/frontend/home_upper_polygon.png", class: "home-upper-image") %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="home-lower">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="home-lower-header"><%= Spree.t('home_lower.header') %></div>
        </div>
      </div>
      <div class="row upper-row">
        <div class="col-md-6">
          <div class="polygon-container">
            <div class="home-lower-polygon">
              <%= image_tag("spree/frontend/home_lower_polygon.png", class: "home-lower-image") %>
            </div>
          </div>
          <div class="text-container">
            <div class="home-title"><%= Spree.t('home_lower.upper_left_title') %></div>
            <div class="home-text"><%= Spree.t('home_lower.upper_left_text') %></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="polygon-container">
            <div class="home-lower-polygon">
              <%= image_tag("spree/frontend/home_lower_polygon.png", class: "home-lower-image") %>
            </div>
          </div>
          <div class="text-container">
            <div class="home-title"><%= Spree.t('home_lower.upper_right_title') %></div>
            <div class="home-text"><%= Spree.t('home_lower.upper_right_text') %></div>
          </div>
        </div>
      </div>
      <div class="row lower-row">
        <div class="col-md-6">
          <div class="polygon-container">
            <div class="home-lower-polygon">
              <%= image_tag("spree/frontend/home_lower_polygon.png", class: "home-lower-image") %>
            </div>
          </div>
          <div class="text-container">
            <div class="home-title"><%= Spree.t('home_lower.lower_left_title') %></div>
            <div class="home-text"><%= Spree.t('home_lower.lower_left_text') %></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="polygon-container">
            <div class="home-lower-polygon">
              <%= image_tag("spree/frontend/home_lower_polygon.png", class: "home-lower-image") %>
            </div>
          </div>
          <div class="text-container">
            <div class="home-title"><%= Spree.t('home_lower.lower_right_title') %></div>
            <div class="home-text"><%= Spree.t('home_lower.lower_right_text') %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="home-map" class="home-map"></div>
  <script>
    function initMap() {
      var mapDiv = document.getElementById('home-map');
      var map = new google.maps.Map(mapDiv, {
        center: {lat: 39.0997, lng: -94.5786},
        zoom: 6,
        minZoom: 4
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>
</div>
